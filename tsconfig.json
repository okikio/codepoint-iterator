{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "ES2021", "DOM"],
    "sourceMap": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src", 
    "benchmark/fixtures"  
  ],
  "exclude": [
    "node_modules"
  ]
}
